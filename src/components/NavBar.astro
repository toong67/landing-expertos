---
// src/components/Navbar.astro

// Definimos los enlaces aqu√≠ para no repetir c√≥digo en el HTML
const navLinks = [
  { name: "Inicio", href: "/" },
  { name: "Nuestros Expertos", href: "/nuestros-expertos" }, 
  { name: "Sobre Nosotros", href: "/about" },
];
---

<nav class="fixed top-0 z-50 w-full bg-white/90 backdrop-blur-md shadow-sm border-b border-gray-100 transition-all duration-300">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      
      <div class="flex-shrink-0 cursor-pointer">
        <a href="/" class="text-2xl font-bold text-gray-800 tracking-tighter hover:text-indigo-500 transition-colors">
          Medical<span class="text-indigo-500">Team</span>.
        </a>
      </div>

      <div class="hidden lg:flex lg:items-center lg:space-x-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="rounded-md px-3 py-2 text-sm font-medium text-gray-600 transition-all duration-200 
                   hover:bg-indigo-50 hover:text-indigo-600 hover:shadow-sm"
          >
            {link.name}
          </a>
        ))}
      </div>

      <div class="flex lg:hidden">
        <button
          id="mobile-menu-btn"
          type="button"
          class="inline-flex items-center justify-center rounded-md p-2 text-gray-500 hover:bg-indigo-50 hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir men√∫ principal</span>
          
          <svg id="icon-menu" class="h-6 w-6 block" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          
          <svg id="icon-close" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="lg:hidden hidden bg-white border-t border-gray-100 absolute w-full" id="mobile-menu">
    <div class="space-y-1 px-4 pb-3 pt-2 shadow-lg">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="block rounded-md px-3 py-3 text-base font-medium text-gray-700 
                 hover:bg-indigo-50 hover:text-indigo-600 hover:pl-5 transition-all duration-300"
        >
          {link.name}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  function initNavbar() {
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    const iconMenu = document.getElementById('icon-menu');
    const iconClose = document.getElementById('icon-close');

    if (btn && menu && iconMenu && iconClose) {
      
      const toggleMenu = () => {
        // 1. Alternar visibilidad del men√∫
        menu.classList.toggle('hidden');
        
        // 2. L√≥gica correcta para alternar √≠conos
        iconMenu.classList.toggle('hidden');
        iconClose.classList.toggle('hidden');
        
        // 3. Accesibilidad
        const isExpanded = btn.getAttribute('aria-expanded') === 'true';
        btn.setAttribute('aria-expanded', String(!isExpanded));
      };

      // Adjuntar listener
      btn.addEventListener('click', toggleMenu);
      
      // Cerrar men√∫ al hacer clic en un enlace
      menu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
            menu.classList.add('hidden');
            iconMenu.classList.remove('hidden'); // Mostrar √≠cono de men√∫
            iconClose.classList.add('hidden');    // Ocultar √≠cono de cierre (X)
            btn.setAttribute('aria-expanded', 'false');
        });
      });
    }
  }

  // üö® ERROR CORREGIDO: Eliminar el 'DOMContentLoaded' y la doble llamada.
  // Usar solo astro:page-load para compatibilidad con View Transitions.
  document.addEventListener('astro:page-load', initNavbar);
</script>