---
// src/components/NuestrosExpertos.astro
import { getCollection } from 'astro:content'; 
import NavigationCard from './NavigationCard.astro'; 

// Fetch de los datos de la colección 'posts'
const profiles = await getCollection('posts');
---

<section class="min-h-screen bg-gray-50 py-20 px-4" id="expertos">
    <div class="mx-auto max-w-7xl">
        <h1 class="text-center text-4xl font-extrabold tracking-tight text-gray-800 mb-12">Conoce a Nuestros Expertos</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 justify-items-center">
        
        {
            // Iteramos sobre los perfiles y usamos NavigationCard
            profiles.map((post: any) => (
            <div class="w-full h-full"> 
                <NavigationCard 
                    expertPost={post} 
                    isCurrent={false} // Siempre falso en la página de listado
                />
            </div>
            ))
        }

        </div>
    </div>
</section>